@model IEnumerable<Kurs>

@{
    ViewData["Title"] = "Kurslar";
}

<h2>Kurs Listesi</h2>

<a href="/Kurs/Create" class="btn btn-primary">Kurs Ekle</a>

<hr>


<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 150px;">@Html.DisplayNameFor(kurs => kurs.KursId)</th>

            <th>@Html.DisplayNameFor(kurs => kurs.Baslik)</th>

            <th style="width: 150px;"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in @Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.KursId)</td>

                <td>@Html.DisplayFor(modelItem => item.Baslik)</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.KursId" class="btn btn-sm btn-primary">Edit</a>

                    <a asp-action="Delete" asp-route-id="@item.KursId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>